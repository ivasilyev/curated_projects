    editor = {Forbes, Betty A.},
    issn = {0095-1137},
    journal = {Journal of Clinical Microbiology},
    month = {jun},
    number = {9},
    pages = {1--7},
    title = {{Multiplex PCR Analysis for Rapid Detection of Klebsiella pneumoniae Carbapenem-Resistant (Sequence Type 258 [ST258] and ST11) and Hypervirulent (ST23, ST65, ST86, and ST375) Strains}},
    url = {http://jcm.asm.org/lookup/doi/10.1128/JCM.00731-18},
