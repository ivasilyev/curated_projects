    pages = {3380},
    publisher = {Springer US},
    title = {{Microbial Colonization Coordinates the Pathogenesis of a Klebsiella pneumoniae Infant Isolate}},
    url = {http://dx.doi.org/10.1038/s41598-019-39887-8 http://www.nature.com/articles/s41598-019-39887-8},
    volume = {9},
    year = {2019}
